  <div class="container w-50  ">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-dark">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
  </div>
</div>


  <h1 class="page-title text-center mt-5">All Celebrities</h1>
  <h4 class ="secondary-title text-center mt-2"> Pick one to star in your super event!</h4>

  <br>

  <br>

  <div class="container">
    <div class="d-flex">
      <div class="row justify-content-between">
          <% @superstars.each do |superstar| %>
            <div class="card" style="width: 18rem;">
              <%= image_tag superstar.image_url, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= superstar.name %></h5>
                <p class="card-text"> <%= superstar.event_type %> </p>
                <%= link_to 'Pick Me!', superstar, class:"btn btn-dark"%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <br>
