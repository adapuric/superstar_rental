<div class="container">
  <div class="row text-center mt-5">
    <div class="col-sm-8 text-left">
      <h3 class="mb-4">Make a new booking for <%= @superstar.name %> </h3>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large mb-4", alt: "avatar-large" %>
      <p> I am available for <strong><%= @superstar.event_type %></strong></p>
      <p> Bio: <%= @superstar.bio %></p>
    </div>
    <div class="col-sm-4">
      <p> I come at a price of: â‚¬ <%= @superstar.price %></p>
      <p>Available in: <%= @superstar.region %></p>
    </div>
  </div>
  <br>

  <h4> When would you like to book <%= @superstar.name %> ? </h4>
  <%= simple_form_for([@superstar, @booking]) do |f| %>
    <%= f.input :event_date %>
    <p><%= f.submit "Book Superstar", class: 'btn btn-primary' %></p>
  <% end %>
  <%= link_to 'Find other Superstars', superstars_path, class:'btn btn-primary'%>
</div>
